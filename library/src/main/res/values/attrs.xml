<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="com.jameskelso.android.widget.PinchToZoomImageView">
        <!-- Minimum width to which a bitmap image can scale -->
        <attr name="minBitmapWidth" format="dimension"/>
        <!-- Minimum height to which a bitmap image can scale -->
        <attr name="minBitmapHeight" format="dimension"/>
        <!-- Maximum width to which a bitmap image can scale -->
        <attr name="maxBitmapWidth" format="dimension"/>
        <!-- Maximum height to which a bitmap image can scale -->
        <attr name="maxBitmapHeight" format="dimension"/>
        <!-- Amount of distance a gesture must travel before it is considered a pan and not a
        touch -->
        <attr name="panThreshold" format="integer"/>
        <!-- Center the image on an axis where the size of the image is less than the size of the
        view. -->
        <attr name="pinAxesSmallerThanBounds" format="boolean"/>
        <!-- Extra translation to the left -->
        <attr name="transExtraLeft" format="dimension"/>
        <!-- Extra translation to the top -->
        <attr name="transExtraTop" format="dimension"/>
        <!-- Extra translation to the right -->
        <attr name="transExtraRight" format="dimension"/>
        <!-- Extra translation to the bottom -->
        <attr name="transExtraBottom" format="dimension"/>
    </declare-styleable>
</resources>